<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/re_bar"
        layout="@layout/popup_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/re_bar"
        android:background="@drawable/popup_window_bg_bottom">

        <LinearLayout
            android:id="@+id/ll_put"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:orientation="horizontal">

            <include
                android:id="@+id/view_chat_input"
                layout="@layout/layout_chat_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6" />

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/txt_send"
                    android:layout_width="95px"
                    android:layout_height="44px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13px"
                    android:background="@drawable/selector_bt_send_message"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textColor="@color/color_chat_pop_send_text"
                    android:textSize="16px" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_put"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:divider="@color/nothing"
            android:dividerHeight="10px"
            android:scrollbars="none"
            android:transcriptMode="alwaysScroll" />

    </RelativeLayout>

</RelativeLayout>