<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/re_bar"
        layout="@layout/old_popup_title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/old_popup_window_bg_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="10px">

            <LinearLayout
                android:id="@+id/ll_mute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_mute"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/old_button_jingyin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/mute_all"
                    android:textColor="@color/old_color_control_text"
                    android:textSize="15px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_unmute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_unmute"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/old_button_talk_all" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/unmute_all"
                    android:textColor="@color/old_color_control_text"
                    android:textSize="15px" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="10px">


            <LinearLayout
                android:id="@+id/ll_send_gift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_send_gift"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/old_button_reward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/send_gift_all"
                    android:textColor="@color/old_color_control_text"
                    android:textSize="15px" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_all_recovery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_all_recovery"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/old_button_restore" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/recovery_teacher"
                    android:textColor="@color/old_color_control_text"
                    android:textSize="15px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
