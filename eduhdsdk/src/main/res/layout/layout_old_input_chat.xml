<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/lin_input_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pupo_chat"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="-5dp"
            android:scaleType="centerInside"
            android:src="@drawable/old_icon_shutup_default"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/old_round_chat_input_back"
            android:gravity="center_vertical"
            android:padding="8px"
            android:text="@string/say_something"
            android:textColor="@color/old_color_chat_input_hint"
            android:textSize="18px" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin_input_chat"
        android:divider="@null" />

</RelativeLayout>
