<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_item_backgroud"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10px"
    android:paddingTop="10px">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/im_type"
            android:layout_width="35px"
            android:layout_height="35px"
            android:src="@drawable/icon_user" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_popup_student_name_item_text"
            android:textSize="16px" />
    </LinearLayout>

    <!--  设置不可见的view起到占位作用  -->
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1" />

    <!--  上下台  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_up_sd"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/button_xiajiangtai" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/old_icon_no_video" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_audio"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/old_button_no_audio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_draw"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/old_button_close_editor" />

    </LinearLayout>

    <!--  举手  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_hand_up"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_handup" />

    </LinearLayout>

    <!--  禁言  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_no_speak"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/button_close_speak" />
    </LinearLayout>

    <!--  移除  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_out_room"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/button_remove" />

    </LinearLayout>

</LinearLayout>
