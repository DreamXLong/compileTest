<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/old_popup_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/old_popup_window_bg_bottom">

        <LinearLayout
            android:id="@+id/ll_chose"
            android:layout_width="250px"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/im_to_left"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:scaleType="fitXY"
                    android:src="@drawable/old_munber_common_icon_left" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_number"
                    android:layout_width="45px"
                    android:layout_height="25px"
                    android:background="@drawable/old_input_munber_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/old_color_choose_edit_munber"
                    android:textSize="15px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="/"
                    android:textColor="@color/old_color_chose_number"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_number_total"
                    android:layout_width="35px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/old_color_chose_number"
                    android:textSize="16px" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/im_to_right"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:scaleType="fitXY"
                    android:src="@drawable/old_munber_common_icon_right" />

            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/ll_student_name_list"
            layout="@layout/old_popup_student_name_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_chose" />

    </RelativeLayout>
</LinearLayout>
