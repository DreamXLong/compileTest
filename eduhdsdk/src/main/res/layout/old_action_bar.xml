<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_old_bar_background"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="11px"
                android:layout_height="22px"
                android:layout_centerInParent="true"
                android:background="@drawable/common_icon_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_pad_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18px" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_class_begin"
            android:layout_width="122px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:background="@drawable/old_selector_class_begin_bt"
            android:gravity="center"
            android:text="@string/classbegin"
            android:textColor="@color/old_color_class_begin"
            android:textSize="18px" />

        <TextView
            android:id="@+id/txt_hand_up"
            android:layout_width="122px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:background="@drawable/old_selector_class_begin_bt"
            android:gravity="center"
            android:text="@string/raise"
            android:textColor="@color/old_color_hands_up"
            android:textSize="18px"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="440px"
            android:layout_toLeftOf="@id/txt_hand_up"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_hour"
                android:layout_width="27px"
                android:layout_height="27px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6px"
                android:background="@drawable/class_time_bg"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="18px" />

            <TextView
                android:id="@+id/txt_mao_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="18px" />

            <TextView
                android:id="@+id/txt_min"
                android:layout_width="27px"
                android:layout_height="27px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/class_time_bg"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="18px" />

            <TextView
                android:id="@+id/txt_mao_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="18px" />

            <TextView
                android:id="@+id/txt_ss"
                android:layout_width="27px"
                android:layout_height="27px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/class_time_bg"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="18px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_teacher_control"
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="160px"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tool_case"
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cb_tool_case"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/old_selector_toolcase"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_member_list"
                android:layout_width="60px"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_member_list"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/old_selector_member_list"
                    android:button="@null"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/iv_hand"
                    android:layout_width="8px"
                    android:layout_height="8px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/munber_hand"
                    android:visibility="invisible" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_file_list"
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cb_file_person_media_list"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@drawable/old_selector_file_person_media_list"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_control"
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cb_control"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/old_selector_control"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!--  撑起布局，防止部分机型用户获得授权时，布局条高度反复变化  -->
    <View
        android:layout_width="1px"
        android:layout_height="50px"
        android:background="@color/nothing" />

    <LinearLayout
        android:id="@+id/ll_upload_pic"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_choose_pic"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_choose_pic"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/old_icon_pic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_open_camera"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_open_camera"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/old_icon_camera" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
