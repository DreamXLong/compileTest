<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_back_black"
    tools:context="com.eduhdsdk.ui.VideoFragment">

    <RelativeLayout
        android:id="@+id/lin_video_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <org.tkwebrtc.SurfaceViewRenderer
                android:id="@+id/suf_mp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <RelativeLayout
                android:id="@+id/re_laoding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/loadingImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/black"
                    android:scaleType="fitCenter" />

            </RelativeLayout>

            <org.xwalk.core.XWalkView
                android:id="@+id/video_white_board"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <include
                android:id="@+id/lin_video_control"
                layout="@layout/layout_media_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px" />

        </FrameLayout>

        <ImageView
            android:id="@+id/img_close_mp4"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_closed_normal" />

    </RelativeLayout>

</FrameLayout>
