<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_old_bar_background"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/old_rl_back"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/old_img_back"
            android:layout_width="11px"
            android:layout_height="22px"
            android:layout_centerInParent="true"
            android:background="@drawable/common_icon_left" />

    </RelativeLayout>

    <TextView
        android:id="@+id/old_txt_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/old_rl_back"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="18px" />

</RelativeLayout>
